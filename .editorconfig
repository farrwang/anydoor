#规约代码规范，适应不同的编辑器

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.json]
indent_size = 4

